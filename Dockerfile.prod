FROM node:23-alpine AS builder

WORKDIR /app

RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    libusb-dev \
    eudev-dev \
    linux-headers \
    supervisor

COPY package.json package-lock.json ./
RUN npm i -f

COPY . .
RUN npm run build

FROM node:23-alpine AS runner

WORKDIR /app

COPY --from=builder /app .

RUN chmod +x /app/scripts/entrypoint.sh


EXPOSE 3000

CMD ["./scripts/entrypoint.sh"]


